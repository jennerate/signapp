<hgroup>
  <span id="signup-form-header">Create Account</span>
</hgroup>

<% if @user.errors.any? %>
  <div>
    <% @user.errors.full_messages.each do |error_message| %>
    <div class="bg-danger"><%= error_message %></div>
    <% end %>
  </div>
<% end %> 

<form action="/user" method="POST" class="signup-form" enctype="multipart/form-data">
 <div class="group">
    <label>Name</label>
    <input type="text" name="name" value="<%= @user.name %>"><span class="highlight"></span><span class="bar"></span>
  </div>

  <div class="group">
    <input type="text" name="username" value="<%= @user.name %>"><span class="highlight"></span><span class="bar"></span>
    <label>Username</label> 
  </div>

  <div class="group">
    <input type="text" name="password" value="<%= @user.password_hash %>"><span class="highlight"></span><span class="bar"></span>
    <label>Password</label>
  </div>
  <div class="group">
    <input type="email" name="email" value="<%= @user.email %>"><span class="highlight"></span><span class="bar"></span>
    <label>Email</label>
  </div>

  <div class="group">
    <label>Describe yourself</label>

      <textarea id="Field4" name="description" spellcheck="true" rows="10" cols="55" tabindex="4"></textarea>
  </div>

  <div class="group">
    <input type="file" name="file" onchange="previewFile()"><br>
    <img src="" height="100">
  </div>

  <button class="button buttonBlue">Sign Up
    <div class="ripples buttonRipples"><span class="ripplesCircle"></span></div>
  </button>
</form>  



<footer><a href="/" target="_blank"><img src="https://www.polymer-project.org/images/logos/p-logo.svg"></a>

  <p>Be Productive <a href="/homepage" target="_blank">&copy;SignApp2016</a></p>
</footer> 
</form>
