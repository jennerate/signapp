<div class="container profile-container">
<div class="col-xs-12" id="profile-main-header">My Profile</div>
<!-- Description Modal -->
  <div class="modal fade" id="descriptionModal" tabindex="-1" role="dialog" aria-labelledby="descriptionModalLabel">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title" id="descriptionModalLabel">Edit your description</h4>
        </div>
        <div class="modal-body">
          <form method="POST" action="/user/profile/edit">
            <textarea class="form-control" rows="3" type="text" name="description" value="<%= current_user.description %>"></textarea>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <button id="descriptionModal-submit" type="button" class="btn btn-primary">Save changes</button>
        </div>
      </div>
    </div>
  </div>

  <!-- Photo Modal -->
  <div class="modal fade" id="photoModal" tabindex="-1" role="dialog" aria-labelledby="photoModalLabel">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title" id="photoModalLabel">Edit your description</h4>
        </div>
        <div class="modal-body">
          <form method="POST" action="/user/profile/edit" enctype="multipart/form-data">
            <input type="file" name="file" onchange="previewFile()"><br>
            <img id="preview-image" src="" height="100">
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <button id="photoModal-submit" type="button" class="btn btn-primary">Save changes</button>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="profile-bio">
        <div class="row">
          <div class="col-md-offset-3 col-md-6">
            <a data-toggle="modal" data-target="#photoModal"><img src="/assets/profile_pics/<%= current_user.photo.nil? || current_user.photo.empty? ? "default_profile.png" : current_user.photo %>" alt="" class="img-responsive img-thumbnail"/>
            <div class="photo-modify"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></div>
            </a>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12 bio-text">
            <h2>NAME</h2>
            <p><%= current_user.name %></p>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12 bio-text">
            <h2>USERNAME</h2>
            <p><%= current_user.username %></p>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12 bio-text">
            <h2>EMAIL</h2>
            <p><%= current_user.email %></p>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="profile-desc">
        <div class="row">
          <div class="col-md-12 bio-desc">
              <div class='col-md-6'>
                <h2>DESCRIPTION<a class="pointer-class" data-toggle="modal" data-target="#descriptionModal"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a></h2>
              </div>
              <div class='col-md-12'>
                <%= current_user.description %>
              </div>
          </div>
        </div>
      </div>
      <div class="profile-accounts">
        <div class="row">
          <div class="col-md-12 bio-accounts">
              <div class='col-md-6 bio-accounts-header'>
                <h2>ACCOUNTS</h2>
              </div>
              <div class='col-md-12'>
                <div class="table-responsive">
                  <table class="table table-striped">
                    <thead>
                      <tr>
                        <th class="col-xs-12 col-md-3">Account</th>
                        <th class="hidden-xs col-md-9">Email</th>   
                      </tr>
                    </thead>
                  <% current_user.accounts.each do |account| %>
                    <tbody>
                      <tr>
                        <td><%= account.account_type %></td>
                        <td align="right"><%= account.email %></td>
                      </tr>
                  <% end %>
                    </tbody>
                  </table>
                </div>
              </div>
          </div>
        </div>
      </div>
    </div>
  </div>

